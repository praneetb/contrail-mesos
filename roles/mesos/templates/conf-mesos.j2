# {{ansible_managed}}

# special options supported by
# mesos-init-wrapper
export CLUSTER="{{mesos_cluster_name}}"
export IP={{mesos_ip}}
export LOGS={{mesos_log_location}}
export ULIMIT="{{mesos_ulimit}}"

# mesos env variables
# see http://mesos.apache.org/documentation/latest/configuration/
export MESOS_HOSTNAME="{{ mesos_hostname }}"

# Additional configs
{% for config_item in mesos_additional_configs %}
export MESOS_{{config_item.name}}={{config_item.value}}
{% endfor %}
